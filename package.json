{
  "name": "agentshield",
  "version": "0.0.4-beta.0",
  "description": "Instant file protection for AI agent operations - hardlink-based zero-copy backup system",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "shield": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "bun run src/index.ts",
    "build:npm": "tsc && node scripts/fix-shebang.js && chmod +x dist/index.js",
    "build:bin": "bun build --compile ./src/index.ts --outfile shield",
    "build:bin:darwin-arm64": "bun build --compile --target=bun-darwin-arm64 ./src/index.ts --outfile shield",
    "build:bin:darwin-amd64": "bun build --compile --target=bun-darwin-x64 ./src/index.ts --outfile shield",
    "build:bin:linux-amd64": "bun build --compile --target=bun-linux-x64 ./src/index.ts --outfile shield",
    "build:bin:linux-arm64": "bun build --compile --target=bun-linux-arm64 ./src/index.ts --outfile shield",
    "build:bin:windows": "bun build --compile --target=bun-windows-x64 ./src/index.ts --outfile shield.exe",
    "build:bin:all": "bash scripts/package.sh",
    "prepublishOnly": "bun run build:npm",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "keywords": [
    "agent",
    "backup",
    "protection",
    "hardlink",
    "rollback",
    "ai-safety"
  ],
  "author": "tomsun28",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomsun28/agentshield.git"
  },
  "homepage": "https://github.com/tomsun28/agentshield#readme",
  "bugs": {
    "url": "https://github.com/tomsun28/agentshield/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "typescript": "^5.0.0"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ]
  }
}
