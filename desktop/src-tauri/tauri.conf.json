{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AgentShield",
  "version": "0.1.0",
  "identifier": "com.agentshield.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "AgentShield - Agent Protection",
        "width": 1000,
        "height": 700,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "resources": {
      "bin/shield*": "./"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "DeveloperTool",
    "shortDescription": "Protect AI-Operated Workspaces",
    "longDescription": "AgentShield monitors your workspace and automatically creates snapshots before AI agents make changes, allowing you to easily restore files if something goes wrong.",
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "linux": {
      "deb": {
        "depends": []
      },
      "appimage": {
        "bundleMediaFramework": false,
        "files": {}
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDkzNDc0QkJBQzk3QzYyQkMKUldTOFluekp1a3RIa3hadk1qS1ZGczVCemxCVFd6SENZb0Q4b3pwa20wNy8yOGg1bXpZZkRybnkK",
      "endpoints": [
        "https://github.com/tomsun28/agentshield/releases/latest/download/latest.json"
      ]
    }
  }
}
